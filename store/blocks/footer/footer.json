{
  "footer": {
    "title": "Footer",
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#Footer-1",
      "flex-layout.row#end"
    ]
  },
  "footer-layout.mobile": {
    "children": [
      "newsletter",
      "flex-layout.row#sally",
      "flex-layout.row#footer-info-geral-mobile",
      "flex-layout.row#payment",
      "flex-layout.row#corebiz",
      "flex-layout.row#end"
    ]
  },

  "flex-layout.row#footer-info-geral-desktop": {
    "title": "Footer - Menu",
    "children": [
      "vtex.menu@2.x:menu#footer-4",
      "vtex.menu@2.x:menu#footer-2",
      "vtex.menu@2.x:menu#footer-3",
      "vtex.menu@2.x:menu#footer-1"
    ]
  },
  "flex-layout.row#footer-info-geral-mobile": {
    "title": "Footer - Menu Mobile",
    "children": [
      "vtex.menu@2.x:menu#footer-4",
      "vtex.menu@2.x:menu#footer-2",
      "vtex.menu@2.x:menu#footer-3",
      "vtex.menu@2.x:menu#footer-5",
      "vtex.menu@2.x:menu#footer-1"
    ],
    "props": {
      "marginTop": "4"
    }
  },
  "logo#space": {
    "props": {
      "width": "8%"
    }
  },
  "flex-layout.row#Footer-1": {
    "children": [
      "flex-layout.col#logoFooter-1",
      "flex-layout.col#paymentFooter",
      "flex-layout.col#madeIn"
    ],
    "props": {
      "blockClass": "colMainFooter",
      "horizontalAlign": "CENTER",
      "preventHorizontalStretch": true,
      "marginTop": "0",
      "marginBottom": 0
    }
  },
  "flex-layout.col#logoFooter-1": {
    "children": [
      "logo#sally",
      "rich-text#aboutUs"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "rich-text#aboutUs": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Mision | Visión | Valores",
      "blockClass": "txt-aboutUs"
    }
  },
  "flex-layout.col#paymentFooter": {
    "children": [
      "rich-text#payment",
      "image#pay"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "rich-text#payment": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Métodos de Pago",
      "blockClass": "txt-aboutUs"
    }
  },
  "flex-layout.col#madeIn":{
    "children": [
      "rich-text#develpedBy",
      "image#pay"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "rich-text#develpedBy": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Desarrollado por: ",
      "blockClass": "txt-aboutUs"
    }
  },
  "flex-layout.row#sally": {
    "children": ["logo#sally"],
    "props": {
      "blockClass": "sally-title",
      "horizontalAlign": "left",
      "preventHorizontalStretch": true,
      "marginTop": "6",
      "marginBottom": 4
    }
  },
  "logo#sally": {
    "props": {
      "title": "Pidele a pepe",
      "href": "/",
      "url": "assets/logo.png",
      "blockClass": "logoBrandFooter"
    }
  },
  "rich-text#sally": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "LEFT",
      "textPosition": "LEFT",
      "text": "SALLY BEAUTY",
      "blockClass": "txt-start"
    }
  },
  "flex-layout.row#payment": {
    "children": ["image#pay"],
    "props": {
      "blockClass": "pay-methods"
    }
  },
  "image#pay": {
    "props": {
      "maxWidth": "100%",
      "src": "assets/logos_pago.svg"
    }
  },
  "flex-layout.row#corebiz": {
    "children": ["image#corebiz"],
    "props": {
      "blockClass": "row-corebiz"
    }
  },
  "image#corebiz": {
    "props": {
      "maxWidth": "7%",
      "src": "/arquivos/corebiz.png"
    }
  },
  "flex-layout.row#end": {
    "children": ["rich-text#end"],
    "props": {
      "blockClass": "colSecondFooter"
    }
  },
  "rich-text#end": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "© 2021 Pídele a PEPE / Todos los Derechos Reservados",
      "blockClass": "txt-end"
    }
  },
  "newsletter": {
    "title": "Newsletter",
    "props": {
      "blockClass": "footer-newsletter",
      "label": "¡No te pierdas de nada, recibe el newsletter!",
      "placeholder": "Correo electrónico",
      "submit": ""
    }
  }
}
