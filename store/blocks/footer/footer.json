{
  "footer": {
    "title": "Footer",
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#Footer-1",
      "flex-layout.row#end"
    ]
  },
  "flex-layout.row#footer-info-geral-desktop": {
    "title": "Footer - Menu",
    "children": [
      "vtex.menu@2.x:menu#footer-4",
      "vtex.menu@2.x:menu#footer-2",
      "vtex.menu@2.x:menu#footer-3",
      "vtex.menu@2.x:menu#footer-1"
    ]
  },
  "flex-layout.row#Footer-1": {
    "children": [
      "flex-layout.col#logoFooter-1",
      "flex-layout.row#socialFooter-desktop",
      "flex-layout.col#paymentFooter",
      "flex-layout.col#madeIn"
    ],
    "props": {
      "blockClass": "colMainFooter",
      "horizontalAlign": "CENTER",
      "preventHorizontalStretch": true,
      "marginTop": "0",
      "marginBottom": 0
    }
  },

  "flex-layout.col#logoFooter-1": {
    "children": [
      "logo#sally",
      "rich-text#aboutUs"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "flex-layout.row#socialFooter-desktop": {
    "children": [
      "flex-layout.col#socialFooterCol-desktop"
    ],
    "props": {
      "blockClass": "rowFooterMobile-desk"
    }
  },
  "flex-layout.col#socialFooterCol-desktop": {
    "children": [
      "image#logo-footer-fb",
      "image#logo-footer-ig",
      "image#logo-footer-tw",
      "image#logo-footer-yt"
    ],
    "props": {
      "blockClass": "socialIcons-mobile",
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "rich-text#aboutUs": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "[Mision](/mision) | [Visión](/vision) | [FAQs](/faqs)",
      "blockClass": "txt-aboutUs"
    }
  },
  "flex-layout.col#paymentFooter": {
    "children": [
      "rich-text#payment",
      "image#american",
      "image#master",
      "image#paypal",
      "image#efectivo"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "rich-text#payment": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Métodos de Pago",
      "blockClass": "txt-aboutUs"
    }
  },
  "image#american": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/american.png",
      "height": 50,
      "width": 50
    }
  },
  "image#master": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/master.png",
      "height": 40,
      "width": 40
    }
  },
  "image#paypal": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/paypal.png",
      "height": 50,
      "width": 50
    }
  },
  "image#efectivo": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/efecttivo.png",
      "height": 40,
      "width": 40
    }
  },
  "flex-layout.col#madeIn":{
    "children": [
      "rich-text#develpedBy",
      "image#dev",
      "image#vtex"
    ],
    "props": {
      "blockClass": "logoAboutUs",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "33%"
    }
  },
  "rich-text#develpedBy": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Desarrollado por: ",
      "blockClass": "txt-aboutUs"
    }
  },
  "image#dev": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/corebiz.png",
      "height": 75,
      "width": 75
    }
  },
  "image#vtex": {
    "props": {
      "blockClass": "pay-size",
      "src": "assets/vtex.png",
      "height": 75,
      "width": 75
    }
  },
  "flex-layout.row#sally": {
    "children": ["logo#sally"],
    "props": {
      "blockClass": "sally-title",
      "horizontalAlign": "left",
      "preventHorizontalStretch": true,
      "marginTop": "6",
      "marginBottom": 4
    }
  },
  "logo#sally": {
    "props": {
      "title": "Pidele a pepe",
      "href": "/",
      "url": "assets/logo-rojo.png",
      "blockClass": "logoBrandFooter"
    }
  },
  "rich-text#sally": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "LEFT",
      "textPosition": "LEFT",
      "text": "SALLY BEAUTY",
      "blockClass": "txt-start"
    }
  },
  "flex-layout.row#payment": {
    "children": ["image#pay"],
    "props": {
      "blockClass": "pay-methods"
    }
  },
  "image#pay": {
    "props": {
      "maxWidth": "100%",
      "src": "assets/logos_pago.svg"
    }
  },
  "flex-layout.row#corebiz": {
    "children": ["image#corebiz"],
    "props": {
      "blockClass": "row-corebiz"
    }
  },
  "image#corebiz": {
    "props": {
      "maxWidth": "7%",
      "src": "/arquivos/corebiz.png"
    }
  },
  "flex-layout.row#end": {
    "children": ["rich-text#end"],
    "props": {
      "blockClass": "colSecondFooter",
      "marginTop": 4
    }
  },
  "rich-text#end": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "© 2021 Pídele a PEPE / Todos los Derechos Reservados",
      "blockClass": "txt-end"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#logoBrandFooter-mobile",
      "flex-layout.row#paymentFooter-mobile",
      "flex-layout.row#madeByFooter-mobile",
      "flex-layout.row#end"
    ]
  },
  "flex-layout.row#logoBrandFooter-mobile": {
    "children": ["flex-layout.col#logoBrandFooterCol-mobile"],
    "props": {
      "blockClass": "rowFooterMobile-1",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#logoBrandFooterCol-mobile": {
    "children": [
      "flex-layout.row#socialFooter-mobile",
      "image#logo-footer",
      "rich-text#aboutUs"
    ],
    "props": {
      "blockClass": "logoAboutUs-mobile",
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "image#logo-footer": {
    "props": {
      "title": "Pidele a pepe",
      "src": "assets/logo-rojo.png",
      "blockClass": "logoBrandFooter",
      "height": 75,
      "width": 70
    }
  },
  "flex-layout.row#socialFooter-mobile": {
    "children": [
      "flex-layout.col#socialFooterCol-mobile"
    ],
    "props": {
      "blockClass": "rowFooterMobile-general",
      "paddingTop": 6,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#socialFooterCol-mobile": {
    "children": [
      "image#logo-footer-fb",
      "image#logo-footer-ig",
      "image#logo-footer-tw",
      "image#logo-footer-yt"
    ],
    "props": {
      "blockClass": "socialIcons-mobile",
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "image#logo-footer-fb": {
    "props": {
      "title": "Pidele a pepe",
      "src": "assets/fb.png",
      "blockClass": "socialIcon-footer",
      "height": 20,
      "width": 20
    }
  },
  "image#logo-footer-ig": {
    "props": {
      "title": "Pidele a pepe",
      "src": "assets/IG.png",
      "blockClass": "socialIcon-footer",
      "height": 20,
      "width": 20
    }
  },
  "image#logo-footer-tw": {
    "props": {
      "title": "Pidele a pepe",
      "src": "assets/tw.png",
      "blockClass": "socialIcon-footer",
      "height": 20,
      "width": 20
    }
  },
  "image#logo-footer-yt": {
    "props": {
      "title": "Pidele a pepe YT",
      "src": "assets/yt.png",
      "blockClass": "socialIcon-footer",
      "height": 20,
      "width": 25
    }
  },
  "flex-layout.row#paymentFooter-mobile": {
    "children": [
      "flex-layout.col#paymentFooterCol-mobile"
    ],
    "props": {
      "blockClass": "rowFooterMobile-general"
    }
  },
  "flex-layout.col#paymentFooterCol-mobile": {
    "children": [
      "rich-text#payment-text",
      "image#icons-footer-payments"
    ],
    "props":{
      "blockClass": "socialIcon-footer"
    }
  },
  "rich-text#payment-text": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Metodos de Pago"
    }
  },
  "image#icons-footer-payments": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "title": "Pidele a pepe YT",
      "src": "assets/pay.png"
    }
  },
  "flex-layout.row#madeByFooter-mobile": {
    "children": [
      "flex-layout.col#developedBy-mobile"
    ],
    "props": {
      "blockClass": "developedBy-row",
      "textAlignment": "CENTER",
      "textPosition": "CENTER"
    }
  },
  "flex-layout.col#developedBy-mobile": {
    "children": [
      "rich-text#madeBy-rich"
    ],
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER"
    }
  },
  "rich-text#madeBy-rich": {
    "title": "Texto Informação Superior",
    "props": {
      "text": "Desarrollado por: ![Desarrollado por](assets/made.png)",
      "blockClass": "madeBy-rich",
      "textAlignment": "CENTER",
      "textPosition": "CENTER"
    }
  }
}
