{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "title": "Header Desktop",
    "children": [
      // "store-selector",
      "modalpopup",
      "sticky-layout#1-desktop"
    ]
  },
  "sticky-layout#1-desktop": {
    "title": "Header fixo",
    "props": {
      "blockClass": "sticky-header",
      "position": "N/A"
    },
    "children": [
      "flex-layout.row#1-desktop",
      "flex-layout.row#2-desktop"
    ]
  },
  "flex-layout.row#1-desktop": {
    "children": [
      "rich-text#row-black"
    ],
    "props": {
      "fullWidth": true,
      "blockClass": ["tip-bartop"]
    }
  },
  "rich-text#row-black": {
    "title": "Row black",
    "props": {
      "width": "100%",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Cerveza, vinos y licores a domicilio",
      "blockClass": ["header-black"]
    }
  },
  "flex-layout.row#2-desktop": {
    "props": {
      "blockClass": "main-header",
      "width": "100%",
      "maxWidth": "100%"
    },
    "children": [
      "flex-layout.col#logo-desktop",
      "flex-layout.col#category-menu",
      "flex-layout.col#search-desktop",
      "flex-layout.col#icons-desktop"
    ]
  },
  "flex-layout.col#logo-desktop": {
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "10%"
    },
    "children": [
      "logo#desktop"
    ]
  },
  "logo#desktop": {
    "props": {
      "title": "Pidele a pepe",
      "href": "/",
      "url": "assets/pp.png",
      "blockClass": "logoBrandHeader"
    }
  },
  "flex-layout.col#category-menu": {
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "35%"
    },
    "children": [
      "vtex.menu@2.x:menu#category-menu"
    ]
  },
  "flex-layout.col#search-desktop":{
    "props": {
      "blockClass": "",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "40%"
    },
    "children": [
      "search-bar"
    ]
  },  
  "search-bar": {
    "blocks": [
      "autocomplete-result-list.v2"
    ],
    "props": {
      "maxSuggestedProducts": 2,
      "width": "100%",
      "openAutocompleteOnFocus": true,
      "placeholder": "Â¿Que se te antoja tomar hoy?",
      "blockClass": "main-search-bar"
    }
  },
  "autocomplete-result-list.v2": {
    "blocks": [
      "product-summary.shelf"
    ]
  },
  "flex-layout.col#icons-desktop":{
    "props": {
      "blockClass": "icons",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "width": "15"
    },
    "children": [
      "login",
      "logo#wishlist",
      "minicart.v2"
    ]
  },
  /*    MOBILE    */
  "header-layout.mobile": {
    "children": [
      // "store-selector",
      "modalpopup",
      "sticky-layout#1-mobile"
    ]
  },
  "sticky-layout#1-mobile": {
    "children": [
      "flex-layout.row#1-mobile",
      "flex-layout.row#2-mobile"
    ],
    "props": {
      "blockClass": "custom-sticky-header--mobile"
    }
  },
  "flex-layout.row#1-mobile": {
    "title": "Header Mobile",
    "children": [
      "flex-layout.col#drawer-menu",
      // "flex-layout.col#logoBrandHeader-mobile",
      "flex-layout.col#iconsHeader-mobile"
    ],
    "props": {
      "blockClass": "main-header-mobile",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    }
  },
  "flex-layout.col#drawer-menu": {
    "children": [
      "drawer",
      "flex-layout.col#logoBrandHeader-mobile"
    ],
    "props": {
      "blockClass": "drawerHeaderCol-mobile",
      "width": "15%"
    }
  },
  "drawer": {
    "children": [
      "vtex.menu@2.x:menu#category-drawer"
    ]
  },
  "menu#drawer": {
    "children": [
      "menu-item#mobile-test-category",
      "menu-item#mobile-paes-e-massas",
      "menu-item#lancamento",
      "menu-item#lojas",
      "menu-item#promocoes",
      "menu-item#blog"
    ],
    "props": {
      "orientation": "vertical"
    }
  },
  "flex-layout.col#logoBrandHeader-mobile": {
    "children": [
      "logo#mobile"
    ],
    "props": {
      "blockClass": "logoHeaderCol-mobile",
      "width": "20%"
    }
  },
  "logo#mobile": {
    "title": "Logotipo mobile",
    "props": {
      "title": "Pidele a Pepe logo mobile",
      "href": "/",
      "url": "assets/pp.png",
      "blockClass": "logoBrandHeader-mobile"
    }
  },
  "flex-layout.col#iconsHeader-mobile": {
    "children": [
      "login",
      "logo#wishlist",
      "minicart.v2"
    ],
    "props": {
      "blockClass": "iconsHeaderCol-mobile",
      "width": "65%"
    }
  },
  "login": {
    "props": {
      "showIconProfile": false,
      "blockClass": "login-icon",
      "iconLabel": "Ingresar"
    }
  },
  "logo#wishlist": {
    "props": {
      "blockClass": "wish-icon",
      "title": "Logo",
      "href": "/wishlist",
      "url": "assets/fav.png",
      "width": "180"
    }
  },
  "logo#wishlist-mobile": {
    "props": {
      "blockClass": "wish-icon",
      "title": "Logo",
      "href": "/wishlist",
      "url": "assets/favorite.svg",
      "width": "180"
    }
  },
  "logo#branch-office-mobile": {
    "props": {
      "blockClass": "place-icon",
      "title": "Logo branch office",
      "href": "/places",
      "url": "assets/icon_place.svg",
      "width": "90"
    }
  },
  "vtex.menu@2.x:menu#custom-menu-right": {
    "children": [
      "menu-item#blog"
    ]
  },
  "menu-item#blog": {
    "props": {
      "id": "menu-item-blog",
      "blockClass": ["menu-item-blog"],
      "type": "custom",
      "iconId": null,
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "/blog",
        "noFollow": false,
        "tagTitle": "Blog",
        "text": "blog editable"
      }
    }
  },
  "flex-layout.row#2-mobile": {
    "children": [
      "search-bar"
    ],
    "props": {
      "blockClass": "searchbar-mobile"
    }
  }
}
